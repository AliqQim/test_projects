@{
    ViewData["Title"] = "Users management";
}

@model IEnumerable<aliksoft.AdminWebApp.Models.UserItemViewModel>

<table>
    <tr>
        <th>Email</th>
        <th>Roles</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@string.Join(", ", user.Roles)</td>
            <td>
                *action links*
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create")">Add New User</a>