<log4net>
	<appender name="RootFileAppender" type="log4net.Appender.FileAppender">
		<file value="C:\tmp\logtest_output\root_log.txt" />
		<appendToFile value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<appender name="AaaFileAppender" type="log4net.Appender.FileAppender">
		<file value="C:\tmp\logtest_output\aaa_log.txt" />
		<appendToFile value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="RootFileAppender" />
	</root>

	<logger name="aaa" additivity="false">
		<level value="DEBUG"/>
		<appender-ref ref="AaaFileAppender"/>
	</logger>


</log4net>
